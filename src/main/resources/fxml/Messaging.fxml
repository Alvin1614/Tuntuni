<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="message-pane" minWidth="250.0" prefHeight="400.0" prefWidth="250.0" style="-fx-background-color: rgba(0,0,0,0.5);" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tuntuni.controllers.MessagingController">
   <children>
      <ListView id="message-list" fx:id="messageList" minWidth="150.0" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ListView>
      <TextArea fx:id="messageText" onKeyTyped="#handleMessageTyped" prefHeight="40.0" promptText="Send a message..." style="-fx-background-color: rgba(0,0,50,0.3); -fx-text-fill: #fff;" wrapText="true">
         <font>
            <Font size="14.0" />
         </font>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </TextArea>
      <HBox prefHeight="30.0" prefWidth="200.0">
         <children>
            <Label fx:id="errorLabel" prefHeight="30.0" text="error label" textFill="#ffc300" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding></Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleSendMessage" prefWidth="100.0" text="Send" textFill="WHITE">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
               <styleClass>
                  <String fx:value="highlight-button" />
                  <String fx:value="send-button" />
               </styleClass>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
