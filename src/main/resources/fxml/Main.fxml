<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane id="main-pane" prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tuntuni.controllers.MainController">
   
    <bottom>
        <HBox prefHeight="20.0" prefWidth="600.0" styleClass="statusbar" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="statusLabel" onMouseClicked="#onStatusClicked" styleClass="status-label" text="Status">
                    <padding>
                        <Insets bottom="3.0" left="10.0" right="3.0" top="3.0" />
                    </padding>
                </Label>
                <Region prefHeight="1.0" prefWidth="1.0" HBox.hgrow="ALWAYS" />
                <ProgressBar fx:id="progressBar" onMouseClicked="#onProgressClicked" prefWidth="150.0" progress="0.39" styleClass="status-progress">
                    <padding>
                        <Insets bottom="3.0" left="3.0" right="10.0" top="3.0" />
                    </padding>
                </ProgressBar>
            </children>
        </HBox>
    </bottom>
    <center>
        <SplitPane dividerPositions="0.3" style="-fx-background-image: url(/img/large1.jpg);" BorderPane.alignment="CENTER">
            <items>
                <fx:include source="SideBar.fxml" />
                <TabPane id="tab-pane" fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: transparent;" tabClosingPolicy="UNAVAILABLE" tabMinHeight="30.0" tabMinWidth="120.0">
                    <tabs>
                        <Tab text="Profile">
                            <content>
                                <fx:include source="Profile.fxml" />
                            </content>
                        </Tab>
                        <Tab text="Messages">
                            <content>
                                <fx:include source="Messaging.fxml" />
                            </content>
                        </Tab>
                        <Tab text="Video Call">
                            <content>
                                <fx:include source="VideoCall.fxml" />
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </items>
        </SplitPane>
    </center>
    
</BorderPane>
