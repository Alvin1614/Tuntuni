<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane id="BorderPane" prefHeight="400" prefWidth="680" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tuntuni.controller.Main">
    <bottom>
        <HBox prefHeight="20.0" prefWidth="600.0" styleClass="statusbar" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="statusLabel" onMouseClicked="#onStatusClicked" styleClass="status-label" text="Status">
                    <padding>
                        <Insets bottom="3.0" left="10.0" right="3.0" top="3.0" />
                    </padding>
                </Label>
                <Region prefHeight="1.0" prefWidth="1.0" HBox.hgrow="ALWAYS" />
                <ProgressBar fx:id="progressBar" onMouseClicked="#onProgressClicked" prefWidth="150.0" progress="0.39" styleClass="status-progress">
                    <padding>
                        <Insets bottom="3.0" left="3.0" right="10.0" top="3.0" />
                    </padding>
                </ProgressBar>
            </children>
        </HBox>
    </bottom>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Profile" />
                        <MenuItem mnemonicParsing="false" text="Messages" />
                        <MenuItem mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="View">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Status Bar" />
                        <MenuItem mnemonicParsing="false" text="Side Bar" />
                        <MenuItem mnemonicParsing="false" text="Menu Bar" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                        <MenuItem mnemonicParsing="false" text="License" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
